{
  "version": "0.2.0",
  "configurations": [
    {
      "type": "node",
      "request": "launch",
      "name": "Hardhat Test",
      "program": "${workspaceFolder}/node_modules/hardhat/internal/cli/cli.js",
      "args": ["test", "test/FundMeTest.ts"],
      "console": "integratedTerminal",
      "skipFiles": ["<node_internals>/**"],
      "outFiles": ["${workspaceFolder}/dist/**/*.js"]
    },
    {
      "type": "node",
      "request": "launch",
      "name": "Hardhat Test Current File",
      "program": "${workspaceFolder}/node_modules/hardhat/internal/cli/cli.js",
      "args": ["test", "${fileBasename}"],
      "console": "integratedTerminal",
      "skipFiles": ["<node_internals>/**"]
    }
  ]
}
